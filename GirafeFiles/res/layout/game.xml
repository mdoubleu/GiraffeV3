	android:layout_width="match_parent" android:layout_height="match_parent">

	<org.Giraffe.GameView android:id="@+id/game1"
		android:layout_width="match_parent" android:layout_height="match_parent" />

	<RelativeLayout android:layout_width="match_parent"
		android:layout_height="match_parent">
